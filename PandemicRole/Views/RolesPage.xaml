<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PandemicRole.Views.RolesPage"
             xmlns:viewModel="clr-namespace:PandemicRole.ViewModels"
             xmlns:behaviors="clr-namespace:PandemicRole.Behaviors"
             xmlns:converters="clr-namespace:PandemicRole.Converters"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:SelectedItemEventArgsToSelectedItemConverter x:Key="SelectedItemConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Roles}"
                  HasUnevenRows="True"
                  BackgroundColor="#2e2d2d"
                  SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                          <StackLayout
                              Padding="2"
                              Margin="5,5"
                              HeightRequest="100"
                              BackgroundColor="DodgerBlue"
                              Orientation="Vertical">
                                <Label TextColor="White"
                                       FontSize="Large"
                                       VerticalOptions="CenterAndExpand"
                                       HorizontalTextAlignment="Center"
                                       Text="{Binding}"/>
                            </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Behaviors>
                <behaviors:EventToCommandBehavior EventName="ItemSelected"
                                                  Command="{Binding RoleSelectedCommand}"
                                                  Converter="{StaticResource SelectedItemConverter}" />
            </ListView.Behaviors>
        </ListView>
    </ContentPage.Content>
</ContentPage>
